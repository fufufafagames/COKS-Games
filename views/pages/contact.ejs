<%- include('../layouts/header') %>
<%- include('../partials/navbar') %>

<div class="container py-5 mt-5">
    <div class="row justify-content-center animate-on-scroll fade-up">
        <div class="col-lg-10">
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold text-white mb-3">Contact Support</h1>
                <p class="lead text-white-50">Have a question or want to report an issue? We're here to help.</p>
            </div>

            <div class="row g-4">
                <!-- Contact Info Card -->
                <div class="col-md-5 order-md-2">
                    <div class="card bg-dark border-secondary h-100 shadow-lg">
                        <div class="card-body p-4">
                            <h4 class="text-white mb-4">Direct Contact</h4>
                            
                            <div class="d-flex align-items-center mb-4 p-3 bg-black rounded border border-secondary">
                                <div class="icon-box bg-success bg-opacity-10 text-success rounded-circle p-3 me-3">
                                    <i class="fab fa-whatsapp fa-2x"></i>
                                </div>
                                <div>
                                    <small class="text-white d-block text-uppercase fw-bold">WhatsApp Admin</small>
                                    <a href="https://wa.me/6289518757171" target="_blank" class="text-white text-decoration-none fs-5 fw-bold hover-text-success">
                                        +62 895-1875-7171
                                    </a>
                                </div>
                            </div>

                            <div class="d-flex align-items-center mb-4 p-3 bg-black rounded border border-secondary">
                                <div class="icon-box bg-primary bg-opacity-10 text-primary rounded-circle p-3 me-3">
                                    <i class="fas fa-envelope fa-2x"></i>
                                </div>
                                <div>
                                    <small class="text-white d-block text-uppercase fw-bold">Email Support</small>
                                    <a href="mailto:coks.helper@gmail.com" class="text-white text-decoration-none fs-5 fw-bold hover-text-primary text-break">
                                        coks.helper@gmail.com
                                    </a>
                                </div>
                            </div>

                            <hr class="border-secondary my-4">

                            <h5 class="text-white mb-3">Office Hours</h5>
                            <ul class="list-unstyled text-white-50">
                                <li class="mb-2 d-flex justify-content-between">
                                    <span>Monday - Friday</span>
                                    <span class="text-white">09:00 - 17:00</span>
                                </li>
                                <li class="mb-2 d-flex justify-content-between">
                                    <span>Saturday</span>
                                    <span class="text-white">10:00 - 15:00</span>
                                </li>
                                <li class="d-flex justify-content-between">
                                    <span>Sunday</span>
                                    <span class="text-white">Closed</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Complaint Form -->
                <div class="col-md-7 order-md-1">
                    <div class="card bg-dark border-secondary shadow-lg">
                        <div class="card-body p-4 p-md-5">
                            <h4 class="text-white mb-4"><i class="fas fa-paper-plane me-2 text-aqua"></i> Send us a message</h4>
                            
                            <% if(success) { %>
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <i class="fas fa-check-circle me-2"></i> <%= success %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            <% } %>

                            <form action="/contact" method="POST">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label text-white-50">Your Name</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-black border-secondary text-secondary"><i class="fas fa-user"></i></span>
                                            <input type="text" class="form-control bg-black text-white border-secondary focus-aqua" name="name" required placeholder="John Doe">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label text-white-50">Email Address</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-black border-secondary text-secondary"><i class="fas fa-at"></i></span>
                                            <input type="email" class="form-control bg-black text-white border-secondary focus-aqua" name="email" required placeholder="name@example.com">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label text-white-50">Subject</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-black border-secondary text-secondary"><i class="fas fa-tag"></i></span>
                                            <select class="form-select bg-black text-white border-secondary focus-aqua" name="subject">
                                                <option value="General Inquiry">General Inquiry</option>
                                                <option value="Bug Report">Report a Bug</option>
                                                <option value="Game Issue">Game Issue</option>
                                                <option value="Account Problem">Account Problem</option>
                                                <option value="Other">Other</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label text-white-50">Message</label>
                                        <textarea class="form-control bg-black text-white border-secondary focus-aqua" name="message" rows="5" required placeholder="Describe your issue or question here..."></textarea>
                                    </div>
                                    <div class="col-12 mt-4">
                                        <button type="submit" class="btn btn-aqua w-100 py-2 fw-bold">
                                            <i class="fas fa-paper-plane me-2"></i> Send Message
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.hover-text-success:hover { color: #25D366 !important; }
.hover-text-primary:hover { color: #0d6efd !important; }
.focus-aqua:focus { border-color: #00d9ff; box-shadow: 0 0 0 0.25rem rgba(0, 217, 255, 0.25); }
.icon-box { width: 64px; height: 64px; display: flex; align-items: center; justify-content: center; }
</style>

<%- include('../layouts/footer') %>
