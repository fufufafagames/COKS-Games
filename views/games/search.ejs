<%- include('../layouts/header', { title: title }) %>
<%- include('../partials/navbar') %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center"> <!-- Reduced width from col-lg-8 to col-lg-6 -->
            <h1 class="display-5 fw-bold gradient-text mb-4">Search Games</h1>
            
            <div class="position-relative mb-5">
                <input 
                    type="text" 
                    id="searchInput" 
                    class="form-control form-control-lg bg-dark-secondary text-white border-aqua shadow-lg p-3 pe-5 ps-4" 
                    placeholder="Type to search (e.g., 'ab' for Absurd)..." 
                    autocomplete="off"
                    style="border-radius: 50px; font-size: 1.2rem;" 
                >
                <!-- Icon moved to end-0 (Right) -->
                <i class="fas fa-search position-absolute top-50 end-0 translate-middle-y me-4 text-aqua fa-lg"></i>
                
                <!-- Spinner moved slightly to the left of the icon -->
                <div id="loadingSpinner" class="position-absolute top-50 end-0 translate-middle-y me-5" style="display: none; padding-right: 10px;">
                    <div class="spinner-border text-aqua spinner-border-sm" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="searchResults" class="row g-4 justify-content-center">
        <!-- Results will be injected here -->
        <div class="col-12 text-center text-white mt-5" id="initialState">
            <i class="fas fa-keyboard fa-5x mb-3 opacity-25"></i>
            <h3>Start typing to explore...</h3>
        </div>
    </div>
</div>

<script>
    const searchInput = document.getElementById('searchInput');
    const searchResults = document.getElementById('searchResults');
    const loadingSpinner = document.getElementById('loadingSpinner');
    const initialState = document.getElementById('initialState');

    let debounceTimer;

    searchInput.addEventListener('input', function(e) {
        const query = e.target.value.trim();

        if (query.length === 0) {
            searchResults.innerHTML = '';
            searchResults.appendChild(initialState);
            initialState.style.display = 'block';
            return;
        }

        clearTimeout(debounceTimer);
        loadingSpinner.style.display = 'block';

        debounceTimer = setTimeout(async () => {
            try {
                const response = await fetch(`/games/api/search?q=${encodeURIComponent(query)}`);
                const games = await response.json();
                
                loadingSpinner.style.display = 'none';
                renderResults(games);
            } catch (error) {
                console.error('Search error:', error);
                loadingSpinner.style.display = 'none';
            }
        }, 300); // 300ms debounce
    });

    function renderResults(games) {
        searchResults.innerHTML = '';

        if (games.length === 0) {
            searchResults.innerHTML = `
                <div class="col-12 text-center text-white mt-5">
                    <i class="fas fa-ghost fa-5x mb-3 opacity-25"></i>
                    <h3>No games found starting with "${searchInput.value}"</h3>
                </div>
            `;
            return;
        }

        games.forEach(game => {
            // Changed from col-lg-4 to col-lg-3 for 4 items per row
            const cardHtml = `
                <div class="col-6 col-md-4 col-lg-3 animate-up">
                    <a href="/games/${game.slug}" class="text-decoration-none">
                        <div class="game-card h-100">
                            <div class="game-card-image" style="height: auto; aspect-ratio: 16/9;">
                                <img src="${game.thumbnail_url || 'https://via.placeholder.com/400x300'}" alt="${game.title}" style="height: 100%; width: 100%; object-fit: cover;">
                                <span class="badge-playable"><i class="fas fa-play me-1"></i> Play</span>
                            </div>
                            <div class="game-card-body p-3">
                                <h6 class="game-card-title text-truncate mb-1">${highlightMatch(game.title, searchInput.value)}</h6>
                                <div class="game-meta d-flex justify-content-between align-items-center">
                                    <span class="badge bg-secondary" style="font-size: 0.7rem;">${game.category || 'Game'}</span>
                                    <small class="text-warning"><i class="fas fa-star"></i> ${Number(game.avg_rating).toFixed(1)}</small>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            `;
            searchResults.insertAdjacentHTML('beforeend', cardHtml);
        });
    }

    // Helper to highlight matching prefix
    function highlightMatch(text, query) {
        const escapedQuery = query.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
        const regex = new RegExp(`^(${escapedQuery})`, 'i');
        return text.replace(regex, '<span class="text-aqua fw-bold">$1</span>');
    }
</script>

<style>
    .animate-up { animation: fadeInUp 0.5s ease backwards; }
    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

