<%- include('../layouts/header', { title: title }) %> <%-
include('../partials/navbar') %>
<div class="container mt-4">
  <div class="row">
    <div class="col-lg-8">
      <div class="game-detail-card">
        <img
          src="<%= game.thumbnail_url %>"
          alt="<%= game.title %>"
          class="game-detail-image"
        />

        <div class="p-4">
          <div class="d-flex align-items-center mb-3">
            <% if (game.icon_url) { %>
                <img src="<%= game.icon_url %>" alt="Icon" class="me-3 rounded-4 border border-secondary" style="width: 80px; height: 80px; object-fit: cover; box-shadow: 0 0 15px rgba(0, 217, 255, 0.3);">
            <% } %>
            <h1 class="game-detail-title m-0"><%= game.title %></h1>
          </div>

          <div class="game-detail-meta d-flex flex-wrap align-items-center gap-2">
            <span class="game-category">
              <i class="fas fa-tag"></i> <%= game.category %>
            </span>

            <span class="game-type">
              <% if (game.game_type === 'playable') { %>
              <i class="fas fa-play"></i> Playable <% } else { %>
              <i class="fas fa-download"></i> Download <% } %>
            </span>

            <% if (game.price_type === 'paid') { %>
            <span class="badge bg-warning text-dark">
                <i class="fas fa-crown"></i> PRO
            </span>
            <span class="text-aqua fw-bold ms-2">
                Rp <%= parseInt(game.price).toLocaleString('id-ID') %>
            </span>
            <% } else { %>
            <span class="badge bg-success">
                <i class="fas fa-gift"></i> FREE
            </span>
            <% } %>
            <% if (game.github_url) { %>
                <a href="<%= game.github_url %>" target="_blank" class="badge bg-dark border border-secondary text-decoration-none ms-auto highlight-hover">
                    <i class="fab fa-github"></i> View on GitHub
                </a>
            <% } %>
          </div>

          <style>
            /* Mobile adjustments for meta */
            @media (max-width: 576px) {
                .game-detail-meta .ms-auto {
                    margin-left: 0 !important;
                    width: 100%;
                    text-align: center;
                    margin-top: 0.5rem;
                }
            }
            .highlight-hover:hover {
                background-color: #00d9ff !important;
                color: #000 !important;
                border-color: #00d9ff !important;
            }
            /* ... existing styles ... */
            .download-card-3d {
                background: rgba(22, 33, 62, 0.7);
                backdrop-filter: blur(10px);
                border-radius: 16px;
                box-shadow: 
                    0 10px 25px rgba(0,0,0,0.5),
                    inset 0 0 0 1px rgba(0, 217, 255, 0.1);
                border: 1px solid rgba(255, 255, 255, 0.05);
                position: relative;
                transition: transform 0.3s ease, box-shadow 0.3s ease;
            }
            /* ... */

            .download-card-3d::before {
                content: '';
                position: absolute;
                top: 0; left: 20px; right: 20px; height: 1px;
                background: linear-gradient(90deg, transparent, #00d9ff, transparent);
                opacity: 0.5;
            }
            .download-card-3d:hover {
                transform: translateY(-2px);
                box-shadow: 0 15px 35px rgba(0, 217, 255, 0.15);
                border-color: rgba(0, 217, 255, 0.3);
            }
            .dl-btn-modern {
                background: linear-gradient(180deg, #2a2a3e, #1a1a2e);
                border: 1px solid rgba(255,255,255,0.1);
                color: #e0e0e0;
                transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
                position: relative;
                overflow: hidden;
                z-index: 1;
            }
            .dl-btn-modern::before {
                content: '';
                position: absolute;
                top: 0; left: 0; width: 0%; height: 100%;
                background: linear-gradient(90deg, #00d9ff, #007bff);
                transition: width 0.3s ease;
                z-index: -1;
            }
            .dl-btn-modern:hover {
                color: #fff;
                border-color: #00d9ff;
                text-shadow: 0 1px 2px rgba(0,0,0,0.5);
                transform: scale(1.02);
            }
            .dl-btn-modern:hover::before {
                width: 100%;
            }
            .meta-badge-modern {
                background: rgba(0, 0, 0, 0.4);
                border: 1px solid rgba(0, 217, 255, 0.2);
                padding: 6px 12px;
                border-radius: 8px;
                font-size: 0.85rem;
                color: #b0c4de;
                display: flex;
                align-items: center;
                gap: 6px;
                box-shadow: inset 0 2px 5px rgba(0,0,0,0.2);
            }
            .meta-badge-modern i {
                filter: drop-shadow(0 0 5px rgba(0, 217, 255, 0.5));
            }
            
            /* Mobile Responsive Tweaks */
            @media (max-width: 576px) {
                .download-card-3d {
                    padding: 1.25rem !important;
                }
                .dl-header {
                    flex-direction: column;
                    align-items: flex-start !important;
                    gap: 10px;
                }
                .dl-header .badge {
                    align-self: flex-start;
                }
                .meta-badges-container {
                    justify-content: flex-start;
                }
                .dl-btn-modern {
                    font-size: 0.95rem;
                    padding: 0.75rem !important;
                }
            }
          </style>

          <div class="game-detail-stats">
            <!-- Rating Box -->
            <div class="stat-box">
              <i class="fas fa-star star-rating"></i>
              <div>
                <strong
                  ><%= (parseFloat(game.avg_rating) || 0).toFixed(1) %></strong
                >
                <small>Rating</small>
              </div>
            </div>

            <!-- Plays Box -->
            <div class="stat-box">
              <i class="fas fa-eye"></i>
              <div>
                <strong><%= game.play_count %></strong>
                <small>Plays</small>
              </div>
            </div>

            <!-- Reviews Box -->
            <div class="stat-box">
              <i class="fas fa-comments"></i>
              <div>
                <strong><%= ratingStats.total %></strong>
                <small>Reviews</small>
              </div>
            </div>
          </div>

          <div class="game-actions w-100">
            <% if (isPurchased) { %>
                <% if (game.game_type === 'playable') { %>
                <a href="/games/<%= game.slug %>/play" class="btn btn-aqua btn-lg w-100">
                  <i class="fas fa-play"></i> Play Now
                </a>
                <% } else { %>
                
                <!-- Download Mode UI (Modern 3D) -->
                <% if (game.parsedDownloadConfig) { %>
                    <div class="download-card-3d p-4 mb-3 w-100">
                        <div class="d-flex justify-content-between align-items-center mb-4 dl-header flex-wrap gap-3">
                            <h5 class="text-aqua m-0 fw-bold d-flex align-items-center gap-2">
                                <i class="fas fa-cloud-download-alt"></i> Download Options
                            </h5>
                            <% if(game.parsedDownloadConfig.version) { %>
                                <span class="badge bg-dark text-info border border-info shadow-sm py-2 px-3">
                                    <i class="fas fa-code-branch me-1"></i> <%= game.parsedDownloadConfig.version %>
                                </span>
                            <% } %>
                        </div>
                        
                        <!-- Game Meta Info Grid -->
                        <div class="d-flex flex-wrap gap-3 mb-4 meta-badges-container">
                            <% if(game.parsedDownloadConfig.os) { %>
                                <div class="meta-badge-modern user-select-none" title="Operating System"><i class="fab fa-windows text-info"></i> <%= game.parsedDownloadConfig.os %></div>
                            <% } %>
                            <% if(game.parsedDownloadConfig.install_type) { %>
                                <div class="meta-badge-modern user-select-none" title="Installation Type"><i class="fas fa-box-open text-warning"></i> <%= game.parsedDownloadConfig.install_type %></div>
                            <% } %>
                            <% if(game.parsedDownloadConfig.file_size) { %>
                                <div class="meta-badge-modern user-select-none" title="File Size"><i class="fas fa-weight-hanging text-success"></i> <%= game.parsedDownloadConfig.file_size %></div>
                            <% } %>
                        </div>

                        <!-- Download Links List -->
                        <div class="d-grid gap-3">
                            <% if (game.parsedDownloadConfig.links && game.parsedDownloadConfig.links.length > 0) { %>
                                <% game.parsedDownloadConfig.links.forEach(link => { %>
                                    <a href="<%= link.url %>" target="_blank" class="btn dl-btn-modern d-flex justify-content-between align-items-center p-3 rounded-3 text-decoration-none shadow-sm">
                                        <div class="d-flex align-items-center gap-2 text-truncate">
                                            <i class="fas fa-download text-aqua"></i> 
                                            <span class="text-truncate">Download via <strong><%= link.name %></strong></span>
                                        </div>
                                        <i class="fas fa-chevron-right small opacity-50 ms-2"></i>
                                    </a>
                                <% }); %>
                            <% } else { %>
                                <div class="text-center text-white py-2 border border-secondary rounded-3 border-dashed">
                                    <small><i class="fas fa-search me-1"></i> No specific mirrors found.</small>
                                </div>
                                <% if(game.github_url) { %>
                                    <a href="<%= game.github_url %>" target="_blank" class="btn dl-btn-modern btn-lg d-flex justify-content-center align-items-center gap-2 mt-2">
                                        <i class="fab fa-github"></i> Download from GitHub
                                    </a>
                                <% } %>
                            <% } %>
                        </div>
                    </div>
                <% } else { %>
                    <!-- Legacy Fallback -->
                    <a href="<%= game.github_url %>" target="_blank" class="btn btn-aqua btn-lg w-100">
                      <i class="fas fa-download"></i> Download Game
                    </a>
                <% } %>

                <% } %>
            <% } else { %>
                <!-- Buy Button -->
                <% if (user) { %>
                <a href="/payment/buy/<%= game.slug %>" class="btn btn-aqua btn-lg w-100">
                  <i class="fas fa-shopping-cart"></i> Buy Game (Rp <%= parseInt(game.price).toLocaleString('id-ID') %>)
                </a>
                <% } else { %>
                <a href="/login" class="btn btn-aqua btn-lg w-100">
                  <i class="fas fa-sign-in-alt"></i> Login to Buy (Rp <%= parseInt(game.price).toLocaleString('id-ID') %>)
                </a>
                <% } %>
            <% } %>

            <% if (user && user.id === game.author_id) { %>
            <div class="mt-4 pt-3 border-top border-white d-flex gap-2 justify-content-end align-items-center">
                <span class="text-white small me-auto"><i class="fas fa-user-cog"></i> Developer Actions</span>
                <a
                  href="/games/<%= game.slug %>/edit"
                  class="btn btn-outline-info btn-sm"
                >
                  <i class="fas fa-edit"></i> Edit
                </a>
    
                <form
                  action="/games/<%= game.slug %>?_method=DELETE"
                  method="POST"
                  style="display: inline"
                  onsubmit="return confirm('Are you sure you want to delete this game?')"
                >
                  <button type="submit" class="btn btn-outline-danger btn-sm">
                    <i class="fas fa-trash"></i> <span> Delete</span>
                  </button>
                </form>
            </div>
            <% } %>
          </div>

          <div class="game-description">
            <h3>About This Game</h3>

            <p><%= game.description %></p>
          </div>

          <% if (game.parsedTags && game.parsedTags.length > 0) { %>
          <div class="game-tags">
            <h5>Tags:</h5>
            <% game.parsedTags.forEach(tag => { %>
            <span class="badge bg-secondary"><%= tag %></span> <% }); %>
          </div>
          <% } %>
        </div>
      </div>

      <div class="ratings-section">
        <h3>Reviews & Ratings</h3>

        <% if (user) { %>
        <div class="rating-form">
          <h5><%= userRating ? 'Update Your Rating' : 'Rate This Game' %></h5>

          <form action="/ratings" method="POST">
            <input type="hidden" name="game_id" value="<%= game.id %>" />

            <div class="mb-3">
              <label class="form-label">Your Rating:</label>

              <div class="star-input">
                <% for(let i = 5; i >= 1; i--) { %> <input type="radio"
                name="rating" id="star<%= i %>" value="<%= i %>" <%= userRating
                && userRating.rating === i ? 'checked' : '' %> required>

                <label for="star<%= i %>"><i class="fas fa-star"></i></label>
                <% } %>
              </div>
            </div>

            <div class="mb-3">
              <label for="review" class="form-label"
                >Your Review (Optional):</label
              >

              <textarea
                class="form-control"
                id="review"
                name="review"
                rows="3"
                maxlength="500"
              >
<%= userRating ? userRating.review : '' %></textarea
              >

              <small class="text-white">Maximum 500 characters</small>
            </div>

            <button type="submit" class="btn btn-aqua">
              <i class="fas fa-paper-plane"></i> Submit Rating
            </button>
          </form>
        </div>
        <% } else { %>
        <div class="alert alert-info">
          <i class="fas fa-info-circle"></i>
          <a href="/login">Login</a> to rate and review this game
        </div>
        <% } %>
        <div class="ratings-list mt-4">
          <% if (ratings.length > 0) { %> <% ratings.forEach(rating => { %>
          <div class="rating-item">
            <div class="rating-header">
              <div class="rating-user">
                <% if (rating.user_avatar) { %>
                <img
                  src="<%= rating.user_avatar %>"
                  alt="<%= rating.user_name %>"
                />
                <% } else { %>
                <i class="fas fa-user-circle fa-2x"></i> <% } %>

                <div>
                  <strong><%= rating.user_name %></strong>

                  <div class="rating-stars">
                    <% for(let i = 1; i <= 5; i++) { %>

                    <i
                      class="fas fa-star <%= i <= rating.rating ? 'filled' : '' %>"
                    ></i>
                    <% } %>
                  </div>
                </div>
              </div>

              <small class="text-white"
                ><%= new Date(rating.created_at).toLocaleDateString() %></small
              >
            </div>
            <% if (rating.review) { %>
            <p class="rating-review"><%= rating.review %></p>
            <% } %>
          </div>
          <% }); %> <% } else { %>
          <p class="text-white text-center py-4">
            No reviews yet. Be the first to review!
          </p>
          <% } %>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <!-- Row untuk membuat 2 card sejajar di tablet dan desktop -->
      <div class="row sidebar-cards-row">
        <div class="col-md-6 col-lg-12">
          <div class="author-card">
            <h5>Uploaded By</h5>

            <div class="author-info">
              <% if (game.author_avatar) { %>
              <img
                src="<%= game.author_avatar %>"
                alt="<%= game.author_name %>"
                class="author-avatar-large"
              />
              <% } else { %>
              <i class="fas fa-user-circle fa-4x text-aqua"></i> <% } %>

              <h4><%= game.author_name %></h4>

              <a
                href="/profile/<%= game.author_id %>"
                class="btn btn-outline-aqua btn-sm"
              >
                View Profile
              </a>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-12">
          <div class="info-card">
            <h5>Game Information</h5>

            <ul class="info-list">
              <li>
                <i class="fas fa-calendar"></i>
                <span
                  >Uploaded: <%= new Date(game.created_at).toLocaleDateString()
                  %></span
                >
              </li>

              <li>
                <i class="fas fa-sync"></i>
                <span
                  >Updated: <%= new Date(game.updated_at).toLocaleDateString()
                  %></span
                >
              </li>

              <li>
                <i class="fas fa-code-branch"></i>
                <span
                  >Type: <%= game.game_type === 'playable' ? 'Browser Game' :
                  'Downloadable' %></span
                >
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../layouts/footer') %>
