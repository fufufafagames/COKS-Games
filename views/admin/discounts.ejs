<%- include('../layouts/admin-layout') %>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-dark text-white border-0 shadow-lg" style="background: linear-gradient(145deg, #1a1a2e 0%, #16213e 100%);">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="fw-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-emerald-400 mb-0">
                                <i class="fas fa-percent me-2"></i> Discount Winners
                            </h2>
                            <p class="text-muted mb-0 mt-1">List of lucky users who claimed Flash Sales & Daily Deals</p>
                        </div>
                        <div class="stats-box text-end">
                            <span class="badge bg-danger p-2 fs-6">
                                <i class="fas fa-fire me-1"></i> Flash Sales: <%= winners.filter(w => w.discount_type === 'flash_sale').length %>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-dark table-hover mb-0 align-middle">
                            <thead class="bg-black bg-opacity-25">
                                <tr>
                                    <th class="py-3 ps-4">Date</th>
                                    <th class="py-3">User</th>
                                    <th class="py-3">Game Won</th>
                                    <th class="py-3">Discount Type</th>
                                    <th class="py-3">Original</th>
                                    <th class="py-3">Final Price</th>
                                    <th class="py-3 pe-4">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (winners && winners.length > 0) { %>
                                    <% winners.forEach(w => { %>
                                        <tr>
                                            <td class="ps-4">
                                                <div class="fw-bold"><%= new Date(w.created_at).toLocaleDateString() %></div>
                                                <small class="text-muted"><%= new Date(w.created_at).toLocaleTimeString() %></small>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-circle me-2 bg-gradient-to-br from-blue-500 to-purple-500 rounded-circle d-flex align-items-center justify-content-center" style="width:32px; height:32px;">
                                                        <%= w.username.charAt(0).toUpperCase() %>
                                                    </div>
                                                    <div>
                                                        <div class="fw-bold"><%= w.username %></div>
                                                        <small class="text-muted"><%= w.user_email %></small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="fw-medium text-white"><%= w.game_title %></span>
                                            </td>
                                            <td>
                                                <% if (w.discount_type === 'flash_sale') { %>
                                                    <span class="badge bg-danger bg-gradient shadow-sm">
                                                        <i class="fas fa-bolt me-1"></i> 99% FLASH SALE
                                                    </span>
                                                <% } else if (w.discount_type === 'event') { %>
                                                    <span class="badge bg-primary bg-gradient">
                                                        <i class="fas fa-calendar-star me-1"></i> 25% EVENT
                                                    </span>
                                                <% } else if (w.discount_type === 'daily') { %>
                                                    <span class="badge bg-info bg-gradient text-dark">
                                                        <i class="fas fa-clock me-1"></i> 10% DAILY
                                                    </span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary">None</span>
                                                <% } %>
                                            </td>
                                            <td class="text-muted text-decoration-line-through">
                                                Rp <%= parseInt(w.original_price || w.amount).toLocaleString('id-ID') %>
                                            </td>
                                            <td class="fw-bold text-success">
                                                Rp <%= parseInt(w.amount).toLocaleString('id-ID') %>
                                            </td>
                                            <td class="pe-4">
                                                <% if (w.status === 'success') { %>
                                                    <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-3 py-2 rounded-pill">
                                                        <i class="fas fa-check-circle me-1"></i> Paid
                                                    </span>
                                                <% } else if (w.status === 'pending' || w.status === 'waiting') { %>
                                                    <span class="badge bg-warning bg-opacity-10 text-warning border border-warning border-opacity-25 px-3 py-2 rounded-pill">
                                                        <i class="fas fa-hourglass-half me-1"></i> Pending
                                                    </span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary px-3 py-2 rounded-pill">
                                                        <%= w.status %>
                                                    </span>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7" class="text-center py-5 text-muted">
                                            <div class="py-4">
                                                <i class="fas fa-ghost fa-3x mb-3 opacity-50"></i>
                                                <p class="mb-0">No discount winners yet.</p>
                                            </div>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        font-weight: bold;
        color: white;
        text-shadow: 0 1px 2px rgba(0,0,0,0.3);
    }
    .text-transparent {
        background-clip: text;
        -webkit-background-clip: text;
        color: transparent;
    }
    .bg-gradient-to-r {
        background-image: linear-gradient(to right, var(--tw-gradient-from), var(--tw-gradient-to));
    }
    .from-blue-400 { --tw-gradient-from: #60a5fa; }
    .to-emerald-400 { --tw-gradient-to: #34d399; }
</style>
