<%- include('partials/header') %>

<div class="container-fluid p-3 p-md-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
        <h2 class="text-white fw-bold m-0 text-center text-md-start">Inbox / Messages</h2>
        <div class="text-white-50 small">
            <i class="fas fa-inbox me-1"></i> Total Messages: <%= messages.length %>
        </div>
    </div>

    <!-- Messages List -->
    <div class="card bg-dark border-secondary shadow-sm">
        <div class="card-body p-0">
            <!-- Mobile View (Cards) -->
            <div class="d-block d-md-none">
                <% if (messages.length > 0) { %>
                    <% messages.forEach(msg => { %>
                        <div class="p-3 border-bottom border-secondary">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <div class="fw-bold text-white"><%= msg.name %></div>
                                    <a href="mailto:<%= msg.email %>" class="text-aqua text-decoration-none small">
                                        <%= msg.email %>
                                    </a>
                                </div>
                                <div class="text-end">
                                     <small class="text-white-50 d-block"><%= new Date(msg.created_at).toLocaleDateString() %></small>
                                     <small class="text-white-50"><%= new Date(msg.created_at).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></small>
                                </div>
                            </div>
                            
                            <div class="mb-2">
                                <span class="badge bg-secondary text-light fw-normal rounded-pill px-2">
                                    <%= msg.subject || 'No Subject' %>
                                </span>
                            </div>
                            
                            <div class="bg-black bg-opacity-25 p-2 rounded mb-3 text-white-50 text-break border border-secondary border-opacity-25">
                                <%= msg.message %>
                            </div>
                            
                            <div class="d-flex justify-content-end gap-2">
                                <a href="mailto:<%= msg.email %>?subject=Re: <%= msg.subject %>" class="btn btn-sm btn-outline-info" title="Reply via Email">
                                    <i class="fas fa-reply me-1"></i> Reply
                                </a>
                                <form action="/admin/messages/<%= msg.id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Delete this message permanently?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="fas fa-trash me-1"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="text-center py-5 text-white-50">
                        <i class="fas fa-inbox fa-3x mb-3 text-secondary"></i>
                        <p class="mb-0">Your inbox is empty.</p>
                    </div>
                <% } %>
            </div>

            <!-- Desktop View (Table) -->
            <div class="table-responsive d-none d-md-block">
                <table class="table table-dark table-hover mb-0 align-middle">
                    <thead class="bg-black text-white-50">
                        <tr>
                            <th scope="col" class="ps-4">Date</th>
                            <th scope="col">Sender</th>
                            <th scope="col">Subject</th>
                            <th scope="col" style="width: 40%;">Message</th>
                            <th scope="col" class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (messages.length > 0) { %>
                            <% messages.forEach(msg => { %>
                                <tr>
                                    <td class="ps-4 text-nowrap text-white-50 small">
                                        <%= new Date(msg.created_at).toLocaleDateString() %> 
                                        <br>
                                        <%= new Date(msg.created_at).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
                                    </td>
                                    <td>
                                        <div class="fw-bold text-white"><%= msg.name %></div>
                                        <a href="mailto:<%= msg.email %>" class="text-aqua text-decoration-none small">
                                            <%= msg.email %>
                                        </a>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary text-light fw-normal rounded-pill px-2">
                                            <%= msg.subject || 'No Subject' %>
                                        </span>
                                    </td>
                                    <td>
                                        <div class="text-white-50 text-break" style="max-height: 80px; overflow-y: auto;">
                                            <%= msg.message %>
                                        </div>
                                    </td>
                                    <td class="text-end pe-4">
                                        <a href="mailto:<%= msg.email %>?subject=Re: <%= msg.subject %>" class="btn btn-sm btn-outline-info me-1" title="Reply via Email">
                                            <i class="fas fa-reply"></i>
                                        </a>
                                        <form action="/admin/messages/<%= msg.id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Delete this message permanently?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" class="text-center py-5 text-white-50">
                                    <i class="fas fa-inbox fa-3x mb-3 text-secondary"></i>
                                    <p class="mb-0">Your inbox is empty.</p>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
